{
    "dataset_reader": {
        "type": "conll2003",
        "tag_label": "pos",
        "token_indexers": {
            "token_characters": {
                "type": "characters"
            },
            "tokens": {
                "type": "single_id",
                "lowercase_tokens": true
            }
        }
    },
    "iterator": {
        "type": "basic",
        "batch_size": 32
    },
    "model": {
        "type": "neural_crf",
        "encoder": {
            "type": "pass_through",
            "input_dim": 130
        },
        "regularizer": [
            [
                "transitions$",
                {
                    "alpha": 0.01,
                    "type": "l2"
                }
            ]
        ],
        "text_field_embedder": {
            "token_embedders": {
                "token_characters": {
                    "type": "character_encoding",
                    "embedding": {
                        "embedding_dim": 25
                    },
                    "encoder": {
                        "type": "rnn",
                        "dropout": 0.25,
                        "hidden_size": 80,
                        "input_size": 25,
                        "num_layers": 2
                    }
                },
                "tokens": {
                    "type": "embedding",
                    "embedding_dim": 50
                }
            }
        }
    },
    "train_data_path": "./data/twitter_train.pos",
    "validation_data_path": "./data/twitter_dev.pos",
    "test_data_path": "./data/twitter_dev.pos",
    "trainer": {
        "cuda_device": -1,
        "num_epochs": 50,
        "optimizer": "adam",
        "patience": 10
    },
    "evaluate_on_test": true
}